<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<VBox prefHeight="400.0" prefWidth="600.0" spacing="15.0" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.tracker.ui.PurchaseController">
   <Label text="Record Purchase (ShopKeeper)">
      <font>
         <Font name="System Bold" size="20.0" />
      </font>
   </Label>
   <GridPane hgap="10.0" vgap="10.0">
      <Label text="Product ID:" GridPane.rowIndex="0" />
      <TextField fx:id="purchaseIDField" promptText="Enter existing product ID" GridPane.columnIndex="1" GridPane.rowIndex="0" />
      
      <Label text="Quantity Received:" GridPane.rowIndex="1" />
      <TextField fx:id="quantityField" promptText="e.g., 100" GridPane.columnIndex="1" GridPane.rowIndex="1" />
      
      <Label text="New Cost Price (Per Unit):" GridPane.rowIndex="2" />
      <TextField fx:id="costPriceField" promptText="e.g., 5.50" GridPane.columnIndex="1" GridPane.rowIndex="2" />
      
      <Label text="Supplier Name:" GridPane.rowIndex="3" />
      <TextField fx:id="supplierNameField" promptText="e.g., Global Distributors" GridPane.columnIndex="1" GridPane.rowIndex="3" />
   </GridPane>
   
   <Button mnemonicParsing="false" onAction="#handleRecordPurchase" text="Record Purchase and Update Stock" style="-fx-background-color: #2196F3; -fx-text-fill: white; -fx-font-weight: bold;" />
   
   <Label fx:id="messageLabel" text="" minHeight="20.0" />
</VBox>