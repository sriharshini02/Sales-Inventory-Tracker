<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<VBox prefHeight="600.0" prefWidth="800.0" spacing="10.0" xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.tracker.ui.SalesHistoryController">
   <padding>
      <Insets bottom="15.0" left="15.0" right="15.0" top="15.0" />
   </padding>
   <Label text="Sales History Report (ShopKeeper)">
      <font>
         <Font name="System Bold" size="20.0" />
      </font>
   </Label>
   
   <Label text="Displays all sales transactions recorded by Staff and ShopKeepers." />

   <TableView fx:id="salesTable" VBox.vgrow="ALWAYS">
      <columns>
         <TableColumn fx:id="colTransactionID" prefWidth="120.0" text="Trans. ID" />
         <TableColumn fx:id="colTimestamp" prefWidth="150.0" text="Timestamp" />
         <TableColumn fx:id="colProductID" prefWidth="100.0" text="Product ID" />
         <TableColumn fx:id="colProductName" prefWidth="180.0" text="Product Name" />
         <TableColumn fx:id="colQuantity" prefWidth="80.0" text="Qty Sold" />
         <TableColumn fx:id="colSalePrice" prefWidth="100.0" text="Unit Price" />
         <TableColumn fx:id="colTotalRevenue" prefWidth="120.0" text="Total Revenue" />
         <TableColumn fx:id="colUser" prefWidth="120.0" text="Recorded By" />
      </columns>
      <columnResizePolicy>
         <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
      </columnResizePolicy>
   </TableView>
</VBox>